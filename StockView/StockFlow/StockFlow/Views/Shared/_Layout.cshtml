<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StockFlow</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StockFlow.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex w-100 h-100">
        <header class="sidebar bg-dark text-white p-3">
            <h2 class="text-center smokey-grey"> <span class="orange-text">S</span>tock<span class="orange-text">F</span>low</h2>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Item" asp-action="Index">Lista</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Item" asp-action="Create">Criar</a>
                </li>
            </ul>
        </header>

        <div class="content p-4 flex-grow-1">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
            @* <footer class="border-top footer text-muted mt-4"> *@
            @*     <div class="container"> *@
            @*         &copy; 2025 - StockFlow - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
            @*     </div> *@
            @* </footer> *@
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
